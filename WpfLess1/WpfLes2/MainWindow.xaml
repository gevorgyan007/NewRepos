<Window x:Class="WpfLes2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLes2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="89*"/>
            <ColumnDefinition Width="111*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="221*"/>
            <RowDefinition Height="213*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="10,10,10,10" Padding="20" Background="LightCoral">
            Grid.Row="0" Grid.Column="0"
        </TextBlock>

        <TextBlock Grid.Row="0" Grid.Column="1" Margin="10,10,10,10" Padding="20" Background="LightCyan">
            Grid.Row="0" Grid.Column="1"
        </TextBlock>
        <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Margin="10,10,10,10" Padding="20" Background="LightGreen">
            Grid.Row="1" Grid.ColumnSpan="2"
        </TextBlock>
    </Grid>
</Window>
